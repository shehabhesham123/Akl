<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="3dp"
    android:background="#ffffff">

    <EditText
        android:id="@+id/AddSize_Size"
        android:inputType="text|textCapSentences"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="@string/AdminActivity_Size_Hint"
        android:textSize="13sp"
        android:fontFamily="@font/abel"
        android:layout_marginEnd="7dp"/>

    <EditText
        android:id="@+id/AddSize_Price"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:hint="@string/AdminActivity_Price_Hint"
        android:fontFamily="@font/abel"/>

    <ImageView
        android:id="@+id/AddSize_ImageView_Add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="7dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_add_24"/>

    <ImageView
        android:id="@+id/AddSize_ImageView_Edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_edit_24"/>

    <ImageView
        android:id="@+id/AddSize_ImageView_Delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_delete_24"/>

    <ImageView
        android:id="@+id/AddSize_ImageView_Done"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="7dp"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_done_24"/>


</LinearLayout>